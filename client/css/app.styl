// Example Stylus file
//
// Stylus docs:  http://learnboost.github.com/stylus/docs/js.html
// Nib docs:     http://visionmedia.github.com/nib

@import 'nib'
$pad = 10px
$rad = 5px
$page-with = 970px
$color = #333
$bg-color = #eee
$popup-bg-color = #fff
$complementary-color = #f66

box($shadow)
  box-shadow 0 0 $shadow darken($bg-color,20%)
  border-radius $rad
  border: 1px solid darken($bg-color,10%)

// Main

body, html
  height 100%

body
  font normal 1em sans-serif
  background linear-gradient(top, #eee, #fff)
p
  margin-bottom 1em

a
  color #000a68

h1
  font-family: 'Flavors', cursive;
  font-size 1.9em
  font-weight normal
  color #333

header
  position: relative
input
  border-radius: 10px
  padding: 4px 6px
  border: 1px solid #ccc
.search
    position: absolute
    left: 300px
    top: $pad
    label
      display: none
    input
      width: 400px


.wrapper
  margin: 0 auto !important;
  width: $page-with
  header
    border-bottom 2px solid #666
    margin-bottom 10px

#user
  position: absolute
  right: $pad
  top: $pad
#usersresult
  position: absolute
  box $rad
  width: 400px
  z-index: 999
  background-color: $popup-bg-color
  li
    overflow: hidden
    border-bottom:1px solid $bg-color
    position: relative

#friends
  ul
    overflow hidden
  li
    position: relative
    float: left
    margin: 5px
    width: 120px
    height: 170px
    border-radius: 5px
    border: 1px solid #ccc
    overflow: hidden
    &:hover 
      box-shadow: 0 0 5px #333
      button
        visibility: visible
  .user-pic
    height: 120px
    float: none
  button
    position: absolute
    visibility: hidden
    cursor: pointer

  .chat,.confirm
    top: 96px
    left: 32px
    background-color: lighten(green,10%)
    box-shadow: 0 0 5px darken(green,40%) inset
    color: #fff
    padding: 2px 14px
    border-radius: 9px
    border: 1px solid darken(green,20%)
  .remove
    top: 3px
    right: 3px
    font-family: "Pictos Custom"
    font-size: 28px
    color: #fff
    padding: 0
    margin: 0
    border: none
    background-color: transparent
    &:before
      content: attr(data-icon)

.user-pic
  float: left
  overflow: hidden
  margin: 2px
  height: 60px
  border-radius: 5px
  img
    height: 100%

.online-true
  font-family: "Pictos Custom", sans-serif
  font-size: 28px
  color: #fff
  position: absolute
  top: 3px
  left: 2px
  &:before
    content: attr(data-icon)

.icons-closetab
  font-family: "Pictos Custom", sans-serif
  font-size: 18px
  color: #000
  visibility: hidden
  &:before
    content: attr(data-icon)

.tabs
  overflow: hidden
  li
    border-radius: 30px
    border: 1px solid #ccc
    float: left
    margin-right: $pad
    a
      padding 5px 10px
      display inline-block
      text-decoration none
    &:hover a.icons-closetab
      visibility: visible
  a.active
    color: $complementary-color
.toolbar
  button,
  .button
    font-size 32px
    font-family: "Pictos Custom", sans-serif
    text-decoration none
    cursor pointer
    display inline-block
    height 32px
    border-radius: $rad
    background-color: lighten($bg-color,20%)
    border: 1px solid $bg-color
    &:hover
      border 1px solid #666
      color red
    &:before
      content: attr(data-icon)
    
  .button
    position: relative
    z-index: 9999
    &:hover
      .color-canvas
        visibility: visible
  
  .on
    border: 1px solid darken($bg-color,10%)
    background-color: $bg-color

.colorsel
  display: block
  margin: 2px
  border-radius: 5px
  width: 28px
  height: 28px
.line-width
  display: inline-block
.main
  position: relative
.canvas
  box $rad
  background-color: #fff

.color-canvas
  position: absolute
  top: 24px
  left: 0
  visibility: hidden
  box $rad

.temp-canvas,
.socket-canvas
  position: absolute
  top: 1px
  left: 1px

.temp-canvas
  z-index: 2;

.socket-canvas
  z-index: 1;

.msginput
  position: fixed
  bottom: $pad
  right: $pad*2
  left: $pad*2
  min-width: 95%
.users
  position: fixed
  right: $pad*2
  left: $pad*2
  bottom: 35px
  .user-pic
    height: 105px
    float: none

  li
    position: relative
    float: left
    width: 120px
    margin-left: 10px
    margin-bottom: 10px
    box $rad

.chat-bubble
  position: absolute
  bottom: 115px
  left: 0
  background-color:#EDEDED
  margin: 10px auto
  padding: 10px
  width:200px
  box-shadow: 0 0 5px darken($bg-color,20%)
  border-radius: 10px
  border: 2px solid #666666
  display: none
  .arrow-border
    border-color: #666666 transparent transparent transparent
    border-style: solid
    border-width: 5px
    height:0
    width:0
    position:absolute
    bottom: -12px
    left: 12px

  .arrow
    border-color: #EDEDED transparent transparent transparent
    border-style: solid
    border-width: 5px
    height:0
    width:0
    position:absolute
    bottom: -9px
    left: 12px

