#user
  position: absolute
  right: $pad
  top: $pad
@media all and (max-width: 600px)
  #user
    display: none

.search
    label
      display: none

#findfriend
  position: absolute
  left: 100px
  top: $pad
  width: 60%

#usersresult
  position: absolute
  width: 100%
  left: 0px
  z-index: 99999
  background-color: $popup-bg-color
  li
    overflow: hidden
    border-bottom:1px solid $bg-color
    position: relative

#friends
  ul
    overflow hidden
  li
    position: relative
    float: left
    margin: 5px
    width: 120px
    height: 170px
    border-radius: 5px
    border: 1px solid #ccc
    overflow: hidden
    &:hover 
      box-shadow: 0 0 5px #333
      button
        visibility: visible
  .user-pic
    height: 120px
    float: none
  button
    position: absolute
    visibility: hidden
    cursor: pointer

  .bt-chat,.bt-confirm
    top: 96px
    left: 32px
    background-color: lighten(green,10%)
    box-shadow: 0 0 5px darken(green,40%) inset
    color: #fff
    padding: 2px 14px
    border-radius: 9px
    border: 1px solid darken(green,20%)
  .bt-remove
    top: 3px
    right: 3px
    font-family: "Pictos Custom"
    font-size: 28px
    color: #fff
    padding: 0
    margin: 0
    border: none
    background-color: transparent
    &:before
      content: attr(data-icon)

.user-pic
  float: left
  overflow: hidden
  margin: 2px
  height: 60px
  border-radius: 5px
  img
    height: 100%

.online-true
  font-family: "Pictos Custom", sans-serif
  font-size: 28px
  color: #fff
  position: absolute
  top: 3px
  left: 2px
  &:before
    content: attr(data-icon)
