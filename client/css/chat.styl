.chat
  position: fixed
  bottom: -160px
  right: 0
  left: 0
  background-color: $bg-color
  opacity: 0.8
  z-index: 1000
  transition: all 0.5s
.main .is-chat-open
  bottom: 0
@media (min-width: 600px)
  .chat
    &:hover
      bottom: 0px

.msginput
  min-width: 95%
.users
  .user-pic
    height: 105px
    float: none

  li
    position: relative
    float: left
    width: 120px
    margin-left: 10px
    margin-bottom: 10px
    box $rad

.chat-bubble
  position: absolute
  bottom: 115px
  left: 0
  background-color:#EDEDED
  margin: 10px auto
  padding: 10px
  width:200px
  box-shadow: 0 0 5px darken($bg-color,20%)
  border-radius: 10px
  border: 2px solid #666666
  display: none
  .arrow-border
    border-color: #666666 transparent transparent transparent
    border-style: solid
    border-width: 5px
    height:0
    width:0
    position:absolute
    bottom: -12px
    left: 12px

  .arrow
    border-color: #EDEDED transparent transparent transparent
    border-style: solid
    border-width: 5px
    height:0
    width:0
    position:absolute
    bottom: -9px
    left: 12px

