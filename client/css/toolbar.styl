#bt-header, .bt-chat-toggler
  background: linear-gradient(top, darken($bg-color,5%), $bg-color, darken($bg-color,20%));
  border-top: 1px solid darken($bg-color,10%)
  color: darken($bg-color,30%)
  display: block
  font-size: 30px
  text-align: center
  text-decoration: none
  width: 100%
@media all and (min-width: 600px)
  #bt-header
    display: none

.is-canvas .toolbar
    max-height: 70px
    overflow: visible

.toolbar
  margin-left: $pad
  max-height: 0
  overflow: hidden
  transition: all 0.5s
.button
  background-color: $bg-color
  border-radius: $rad
  border: 1px solid $bg-color
  cursor pointer
  display: inline-block
  font-family: "Pictos Custom", sans-serif
  font-size 42px
  height 42px
  width 42px
  position: relative
  z-index: 9999
  &:hover
    border 1px solid #666
    color lighten($complementary-color,20%)
    .color-canvas
      visibility: visible
.button, .dd-button button
  &:before
    content: attr(data-icon)
.dd-button
  height 42px
  width 42px
  display: inline-block
  overflow: hidden
  position: relative
  .dd-list
    position: absolute
    border-radius: $rad
    border: 1px solid $bg-color
    background-color: $bg-color
    li
      display: none
    li.on
        display: block
  &:hover
    overflow: visible
    .dd-list
      border: 1px solid darken($bg-color,10%)
      li
        display: block
  button
    cursor pointer
    background-color: $bg-color
    border-radius: $rad
    border: 1px solid $bg-color
    font-size 42px
    height 42px
    text-decoration none
    font-family: "Pictos Custom", sans-serif
    width 42px

    
  .on button
    background-color: #fff
    color $complementary-color
.lw .dd-list
  li
    position: relative
    height 42px
    width 42px
    cursor pointer
    background-color: $bg-color
    border-radius: $rad
    border: 1px solid $bg-color
  div
    width 42px
    display: block
    background-color: #000
    position: absolute
  .on
    background-color: #fff

.lw-1 div
  top: 20px
  height: 2px
.lw-2 div
  top: 19px
  height: 4px
.lw-3 div
  top: 18px
  height: 8px
.lw-4 div
  top: 17px
  height: 10px

.colorsel
  border-radius: 5px
  display: block
  height: 38px
  margin: 2px
  width: 38px

.color-canvas
  box $rad
  height: 256px
  overflow: hidden
  position: absolute
  left: 0
  top: 42px
  visibility: hidden
